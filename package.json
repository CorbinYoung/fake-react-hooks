{
	"name": "fake-react-hooks",
	"version": "0.6.6",
	"author": "corbin.young",
	"description": "Make fake react hooks to test custom hooks without rendering",
	"types": "build/index.d.ts",
	"main": "src/index",
	"scripts": {
		"lint": "tslint -c tslint.config.js 'src/**/*.ts",
		"test": "jest --colors",
		"test:coverage": "jest --colors --coverage",
		"build": "npm run build:types && npm run build:js",
		"build:types": "tsc",
		"build:js": "babel src --out-dir build --extensions \".ts\" --source-maps inline"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/CorbinYoung/fake-react-hooks.git"
	},
	"license": "MIT",
	"dependencies": {},
	"devDependencies": {
		"@babel/cli": "7.13.10",
		"@babel/core": "7.13.13",
		"@babel/plugin-proposal-class-properties": "7.13.0",
		"@babel/plugin-proposal-object-rest-spread": "7.13.8",
		"@babel/preset-env": "7.13.12",
		"@babel/preset-typescript": "7.13.0",
		"@types/jest": "24.0.22",
		"husky": "5.2.0",
		"jest": "26.6.3",
		"prettier": "2.2.1",
		"tslint": "6.1.3",
		"tslint-config-prettier": "1.18.0",
		"typescript": "4.2.3"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint",
			"pre-push": "npm run test:coverage"
		}
	},
	"keywords": [
		"javascript",
		"react",
		"hooks",
		"testing"
	]
}
